@* Modal de bienvenida (siempre renderizado) *@
<div class="welcome-bg @(Show ? "" : "hide")" aria-hidden="@(!Show)">
    <div class="welcome-grid">

        <div class="welcome-left">
            <h2>¿Qué es QrBox?</h2>
            <p>
                QrBox es una herramienta en línea para crear códigos QR únicos, gratis y personalizables.
                Genera códigos para enlaces, redes sociales, WiFi, productos y más.
                Elige colores, formas, logotipo y descárgalo en alta calidad (PNG o SVG).
            </p>
            <h3>¿Por qué usar QrBox?</h3>
            <ul>
                <li>✅ Totalmente gratuito y sin registros</li>
                <li>🎨 Personalización avanzada de diseño</li>
                <li>📥 Descarga rápida en múltiples formatos</li>
                <li>📱 Compatible con todos los lectores QR</li>
                <li>🔒 No almacenamos tus datos</li>
            </ul>

            <h3>Ideal para:</h3>
            <p>
                Negocios, emprendimientos, productos, invitaciones, menús digitales, etiquetas, campañas de marketing y más.
            </p>
        </div>

        <div class="welcome-right">
            <img src="/img/logo/QrBoxSolo.webp" class="welcome-logo" alt="Logo QrBox" width="150" height="177" fetchpriority="high" decoding="async" />
            <h1 class="welcome-title">Generador de Códigos<br /> QR Personalizados</h1>
            <h2 class="welcome-subtitle">
                Crea códigos QR únicos y profesionales con diseño personalizado.
            </h2>
            <button class="welcome-btn" @onclick="CerrarModal">Empezar</button>
            <div class="welcome-help">No compartimos tus datos personales.</div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public bool Show { get; set; } = true;

    private async Task CerrarModal()
    {
        if (OnClose.HasDelegate)
            await OnClose.InvokeAsync(null);
    }
}

