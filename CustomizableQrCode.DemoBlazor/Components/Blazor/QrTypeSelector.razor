<div class="honeycomb-columns">
    <!-- Columna Izquierda (3) -->
    <div class="honey-column honey-col-left">
        <HexButton Label="Enlace" Color="#E3DC3B" IconSvg="@LinkIcon" OnClick="@(() => SelectType("Link"))" />
        <HexButton Label="VCard" CssClass="hex-left-offset" Color="#FFA736" IconSvg="@PersonIcon" OnClick="@(() => SelectType("VCard"))" />
        <HexButton Label="Texto" Color="#8A5BAF" IconSvg="@TextIcon" OnClick="@(() => SelectType("Text"))" />
    </div>
    <!-- Columna Centro (4) -->
    <div class="honey-column honey-col-center">
        <HexButton Label="Email" Color="#71C97A" IconSvg="@EmailIcon" OnClick="@(() => SelectType("Email"))" />
        <HexButton Label="WiFi" Color="#5A8CE7" IconSvg="@WifiIcon" OnClick="@(() => SelectType("WiFi"))" />
        <HexButton Label="App" Color="#38BCE3" IconSvg="@AppIcon" OnClick="@(() => SelectType("App"))" />
        <HexButton Label="PDF" Color="#5A8CE7" IconSvg="@PdfIcon" OnClick="@(() => SelectType("PDF"))" />
    </div>
    <!-- Columna Derecha (3) -->
    <div class="honey-column honey-col-right">
        <HexButton Label="SMS" Color="#8A5BAF" IconSvg="@SmsIcon" OnClick="@(() => SelectType("SMS"))" />
        <HexButton Label="WhatsApp" CssClass="hex-right-offset"  Color="#71C97A" IconSvg="@WhatsAppIcon" OnClick="@(() => SelectType("WhatsApp"))" />
        <HexButton Label="Llamada" Color="#38BCE3" IconSvg="@CallIcon" OnClick="@(() => SelectType("Call"))" />
    </div>
</div>


@code {
    [Parameter] public string SelectedType { get; set; }
    [Parameter] public EventCallback<string> SelectedTypeChanged { get; set; }

    private void SelectType(string type)
    {
        SelectedType = type;
        SelectedTypeChanged.InvokeAsync(type);
    }

    // ICONOS SVG COMO RENDERFRAGMENT
    RenderFragment LinkIcon => @<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><path d="M17 7a5 5 0 0 1 0 7l-4 4a5 5 0 0 1-7-7l2-2" stroke="#444" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /><path d="M7 17a5 5 0 0 0 7 0l2-2" stroke="#444" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /></svg>;
